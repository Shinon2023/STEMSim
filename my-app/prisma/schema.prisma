// prisma/schema.prisma

datasource db {
  provider = "sqlite"
  url      = "file:./users.db" // เปลี่ยนชื่อไฟล์เป็น users.db
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id       Int      @id @default(autoincrement())
  email    String   @unique
  password String
  createdAt DateTime @default(now())
}
